    <androidx.cardview.widget.CardView
        android:layout_width="190dp"
        android:layout_height="260dp"
        android:outlineAmbientShadowColor="@color/blackShadow"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/azul5"
            android:padding="16dp">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Blue Zone"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenConsultarVeiculo"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="CONSULTAR VEÍCULO"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenItinerario"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="ITINERÁRIO"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>